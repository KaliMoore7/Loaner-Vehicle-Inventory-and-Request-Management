        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Search for existing servicing tickets associated to the current tracker record open
    var vehServ = new GlideRecord('x_919571_lva_vehicle_servicing');
	vehServ.addQuery('vehicle_servicing', current.sys_id);
	vehServ.addQuery('tracker_status', 'Open');
    vehServ.query();

    if (!vehServ.next()) {
        // No open Vehicle Servicing ticket found, create a new one
		var newticket = new GlideRecord('x_919571_lva_vehicle_servicing');

	// Current date servicing ticket was opened
	var gd = new GlideDate();

	// Create a record on the vehicle servicing table
        newticket.initialize();
        newticket.setValue('vehicle_servicing', current.sys_id);
        newticket.setValue('vehicle', current.vehicle);
        newticket.setValue('vehicle_status', 'In Service');
        newticket.setValue('date', gd.getValue());
        newticket.setValue('ticket_status', 'open');
        newticket.insert();
    } 

})(current, previous);]]></script>
